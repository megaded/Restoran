@model RestoranWeb.Models.ProductViewModel
@{
    ViewBag.Title = Model.Product.Name;
}
<div class="panel panel-primary">
    <div class="panel-heading">
        @Model.Product.Name
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.Label("Название", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-3">
                    @Html.HiddenFor(m => m.Product.ProductId)
                    @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Категория", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-3">
                    @Html.DropDownListFor(m => m.Product.ProductCategoryId, Model.ProductСategories, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Единица измерения", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.Product.UnitId, Model.Units, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Описание", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-5">
                    @Html.TextAreaFor(m => m.Product.Description, new { @class = "form-control", @rows = 6 })
                </div>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        }
    </div>
</div>