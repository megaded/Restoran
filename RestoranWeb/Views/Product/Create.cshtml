@model RestoranWeb.Models.ProductViewModel
@{
    ViewBag.Title = "Новый продукт";
}
<div class="panel panel-primary">

    <div class="panel-heading">
        Добавление нового продукта
    </div>

    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="panel-body">
            <div class="form-group">
                @Html.Label("Название", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Product.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Единица измерения", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.UnitId, Model.Units, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Категория", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.ProductCategoryId, Model.ProductСategories, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Описание", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Product.Description, new { @class = "form-control" })
                </div>
            </div>
        </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
    }
</div>