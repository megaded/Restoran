@model RestoranWeb.Models.LocationViewModel.LocationViewModel
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Новая локация</h3>
    </div>
    @using (Html.BeginForm("Create", "Location", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="panel-body">
            <div class="form-group">
                @Html.Label("Название", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })                    
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Рынок", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.MarketId, Model.Markets, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    }
</div>