@model List<Restoran.ProductStorage>
@{
    ViewBag.Title = "Продукты";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Остатки</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Ед.изм.</th>
                    <th>Количество</th>
                    <th>Цена</th>
                    <th>Общая цена</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Unit.Symbol</td>
                    <td>@item.Value</td>
                    <td>@item.Price</td>
                    <td>@(item.Price * (decimal)item.Value)</td>
                </tr>
            }
        </table>
    </div>
</div>


   
