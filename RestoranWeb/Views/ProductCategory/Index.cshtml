@model List<Restoran.ProductCategory>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Категории продуктов</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Название</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.ProductCategoryId</td>
                        <td>@category.Name</td>
                        <td>@Html.ActionLink("Просмотр", "Detail", "ProductCategory", new { id = category.ProductCategoryId }, new { @class = "btn btn-primary" })</td>
                        <td>@Html.ActionLink("Редактировать", "Edit", "ProductCategory", new { id = category.ProductCategoryId }, new { @class = "btn btn-success" })</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить", "Create", "ProductCategory", null, new { @class = "btn btn-primary" })
    </div>
</div>