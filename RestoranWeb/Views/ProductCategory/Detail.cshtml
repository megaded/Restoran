@model Restoran.ProductCategory

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Name</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-3">
                <table class="table">
                    <caption>Продукты</caption>
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Название</td>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var product in Model.Products)
                       {
                           <tr>
                               <td>@product.ProductId</td>
                               <td>@product.Name</td>
                           </tr>
                       }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Назад", "Index", "ProductCategory", null, new { @class="btn btn-primary"})
        </div>
    </div>