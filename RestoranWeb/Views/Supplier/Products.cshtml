@model RestoranWeb.Models.OrderCreateViewModel



@using (Html.BeginForm("Create", "Order", FormMethod.Post))
{
    <table class="table">
        <caption>Создать заказ.</caption>
        <thead>
            <tr>
                <td>Название</td>
                <td>Цена</td>
                <td>Количество</td>
            </tr>
        </thead>
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            <tr>
                <td>@Html.DisplayFor(m =>m.ProductOrdered[@i].Product.Name) @Html.HiddenFor(m => m.ProductOrdered[@i].Product.ProductId)</td>
                <td>@Html.DisplayFor(m => m.Products[@i].Price) @Html.HiddenFor(m=>m.ProductOrdered[@i].Price) </td>
                <td>@Html.TextBoxFor(m=>m.ProductOrdered[@i].Value)</td>
            </tr>
        }
    </table>
    <input type="submit" value="Создать заказ"/>
}




