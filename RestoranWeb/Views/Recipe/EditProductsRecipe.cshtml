@model  List<Restoran.ProductRecipe>
<table class="table">
    <thead>
        <tr>
            <th class="col-md-7">Название</th>
            <th class="col-md-3">Ед.изм.</th>
            <th>Количество</th>
            <th class="col-md-2"></th>
        </tr>
    </thead>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Html.DisplayFor(m => m[@i].Product.Name) @Html.HiddenFor(m=>m[@i].ProductId)</td>
            <td>@Html.DisplayFor(m => m[@i].Product.Unit.Symbol)</td>
            <td>@Html.TextBoxFor(m => m[@i].Value, new { @class = "form-control" })</td>
            <td>
                @Ajax.ActionLink("Удалить", "RemoveProduct", new { id = Model[@i].ProductId }, new AjaxOptions { UpdateTargetId = "edit" }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
