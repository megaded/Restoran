@model RestoranWeb.Models.MarketViewModel.MarketEditViewModel

<h3>Поставщики</h3>
@using (Html.BeginForm("EditSupplier", "Market", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    for (int i = 0; i < Model.MarketSupplier.Count; i++)
    {
        @Html.DisplayFor(m =>m.MarketSupplier[@i].Name )
        @Html.HiddenFor(m => m.MarketSupplier[@i].SupplierId)
        @Ajax.ActionLink("Удалить", "RemoveSupplier", new { supId = Model.MarketSupplier[@i].SupplierId }, new AjaxOptions { UpdateTargetId = "edit" })

    }
    <button type="submit" class="btn btn-primary">Сохранить</button>
}

<h3>Поставщики</h3>
<table>
    @foreach (var supplier in Model.NoMarketSupplier)
    {
        <tr>
            <td>@supplier.Name</td>
            <td>
                @Ajax.ActionLink("Добавить", "AddSupplier", new { supId = supplier.SupplierId }, new AjaxOptions { UpdateTargetId = "edit" })
            </td>
        </tr>
    }
</table>
