@model RestoranWeb.Models.UnitViewModel.UnitViewModel
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Редактировать</h3>
    </div>
    @using (Html.BeginForm("Edit", "Unit", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="panel-body">
            <div class="form-group">
                @Html.Label("Название", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.HiddenFor(m => m.Id)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Сокращение", new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Symbol, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Symbol)
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    }
</div>