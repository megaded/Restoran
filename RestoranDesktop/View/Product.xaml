<Window x:Class="RestoranDesktop.View.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestoranDesktop.View"
        mc:Ignorable="d"
        Title="Product" Height="300" Width="300">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding ProductId}"></TextBlock>
        <TextBlock Text="{Binding Name}"></TextBlock>
        <TextBlock Text="{Binding Category}"></TextBlock>
        <TextBlock Text="{Binding Description}"></TextBlock>
        <TextBlock Text="{Binding Unit}"></TextBlock>
    </StackPanel>
</Window>
